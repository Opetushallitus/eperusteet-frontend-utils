div.edit-controls(ng-cloak ng-hide="hideControls || !editStarted")
  div.edit-control-content
    div.edit-control-header
      span.glyphicon.glyphicon-pencil
    div.edit-control-buttons
      button.btn.btn-default(ng-disabled="disableButtons" ng-click="cancel()" kaanna="'peruuta'")
      span=" "
      button.btn.btn-primary(ng-disabled="disableButtons || $$disableSave" ng-click="save()" kaanna="'tallenna'")
    div.edit-control-comment
      input.form-control(type="text" ng-model="kommentti" placeholder="{{ 'kirjoita-kommentti' | kaanna }}")
