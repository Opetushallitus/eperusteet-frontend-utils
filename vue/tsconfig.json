{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "target": "es6",
    "types": ["vitest/globals", "vitest/jsdom"],
    "paths": {
      "@shared/*": ["src/*"],
      "@assets/*": ["public/*"],
      "@/*": ["src/*"],
      "&/*": ["tests/*"],
    },
    "lib": [
      "esnext",
      "es2015.promise",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts.d",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/*.d.ts",
    "tests/integration/**/*.ts",
    "tests/integration/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "generated",
    "src/generated"
  ]
}
